<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- content padding -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp"/>

    <!-- white fill -->
    <solid android:color="@android:color/white"/>

    <!-- thin dark border -->
    <stroke
        android:width="1dp"
        android:color="#444"/>

    <!-- pill corners -->
    <corners android:radius="24dp"/>
</shape>
